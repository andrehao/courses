<html>
	<body>
		<div class='erros'>
			<%if(errosValidacao){%>
				<ul>
					<%for(var i = 0 ; i < errosValidacao.length; i++) {%>
						<li><%=errosValidacao[i].param%> - <%=errosValidacao[i].msg%></li>
					<%}%>
				</ul>
			<%}%>
		</div>
		<form action="/produtos" method="post">
			<div>
				<label for="titulo">Titulo</label>
				<input id="titulo" type="text" name="titulo" placeholder="coloque o titulo" value="<%=produto.titulo%>"/>
			</div>
			<div>
				<label for="preco">Preco</label>
				<input id="preco" type="text" name="preco" placeholder="coloque o preco" value="<%=produto.preco%>"/>
			</div>
			<div>
				<label for="descricao">Descricao</label>
				<textarea cols="20" rows="10" id="descricao" name="descricao" placeholder="fale sobre o livro" ><%=produto.descricao%></textarea>
			</div>

			<input type="submit" value="gravar"/>
		</form>
	</body>
</html>